<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirige todo el tr√°fico al directorio public
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ /public/$1 [L,QSA]

    # Alternativa: redirigir solo si la solicitud no es un archivo o carpeta existente
